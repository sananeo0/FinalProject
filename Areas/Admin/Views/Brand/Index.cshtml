@model BrandIndexVM

<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hoverable Table</h4>
            <p class="card-description">
                Add class <code>.table-hover</code>
            </p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th> Brand ID </th>
                        <th> Brand Name </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model.Brands)
                    {
                        <tr>
                            <td>@brand.Id</td>
                            <td> @brand.Name </td>
                            <td>
                                    <a class="badge badge-warning" asp-action="Update" asp-controller="Brand" asp-route-id="@brand.Id">Update</a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-controller="Brand" asp-route-id="@brand.Id" class="badge badge-danger">Delete</a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td>
                            <form asp-action="Add" asp-controller="Brand">
                                <button type="submit" class="badge badge-success">ADD</button>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
